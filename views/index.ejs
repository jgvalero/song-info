<h1>Song Info</h1>

<form action="/" method="post">
	<input type="text" name="artist" required />
	<input type="text" name="song" required />
	<button>Submit</button>
</form>

<% if (locals.artist) { %>
	<p><%= fullTitle %></p>
	<p><%= artist %></p>
	<p><%= song %></p>
	<p><%= listeners %></p>
	<p><%= playCount %></p>
	<p><%- summary %></p>
<% } else { %>
	<p>Input artist and song!</p>
<% } %>
